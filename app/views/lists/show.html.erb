<div class=  "container">
  <%= render "layouts/parcials/navbar" %>
</div>
<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1597002973885-8c90683fa6e0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1164&q=80);">
  <div class="container">
    <h1><strong><%= @list.name %></strong></h1>
  </div>
</div>
<div>

  <%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-flat m-4" %>

   <div class= "cards container my-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( '<%= bookmark.movie.poster_url %>' )">
          <%= bookmark.movie.title %>
        </div>
        <div class ="delete-link text-center bg-danger color text-decoration-none">
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-button" %>
        </div>
      </div>
    <% end %>
  </div>

</div>